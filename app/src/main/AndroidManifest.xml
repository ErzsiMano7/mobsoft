<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobsoft.bme.hu.mobsoft">

    <application
        android:name=".MobSoftApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity">
        </activity>
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.list.ListActivity" android:label="@string/animals"></activity>

        <activity android:name=".ui.detail.DetailActivity"></activity>

        <activity android:name=".ui.create.CreateActivity" android:label="@string/add_new_animal"></activity>
    </application>

</manifest>